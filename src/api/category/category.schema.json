{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "object",
    "title": "Category",
    "description": "The Category",
    "required": [
        "name"
    ],
    "additionalProperties": false,
    "properties": {
        "id": {
            "$id": "#/properties/id",
            "type": "integer",
            "title": "The database ID of item."
        },
        "name": {
            "$id": "#/properties/name",
            "type": "string",
            "title": "Name of the item."
        },
        "parent_category_id": {
            "$id": "#/properties/id",
            "type": "integer",
            "title": "The parent category ID."
        },
        "created_at": {
            "$id": "#/properties/created_at",
            "type": "string",
            "title": "The creation date of the user."
        },
        "updated_at": {
            "$id": "#/properties/updated_at",
            "type": "string",
            "title": "The date the user was last updated."
        }
    }
  }