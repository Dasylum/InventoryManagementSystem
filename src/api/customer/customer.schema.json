{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "object",
    "title": "Customer",
    "description": "The Customer",
    "required": [
        "name",
        "phone"
    ],
    "additionalProperties": false,
    "properties": {
        "id": {
            "$id": "#/properties/id",
            "type": "integer",
            "title": "The database ID of a customer."
        },
        "name": {
            "$id": "#/properties/name",
            "type": "string",
            "title": "Name of the customer."
        },
        "phone": {
            "$id": "#/properties/phone",
            "type": "number",
            "title": "Phone number of the customer."
        },
        "email": {
            "$id": "#/properties/email",
            "type": "string",
            "title": "Email id of the customer."
        },
        "address_id": {
            "$id": "#/properties/address_id",
            "type": "integer",
            "title": "Address of the customer."
        },
        "created_at": {
            "$id": "#/properties/created_at",
            "type": "string",
            "title": "The creation date of the bill."
        },
        "updated_at": {
            "$id": "#/properties/updated_at",
            "type": "string",
            "title": "The date the bill was last updated."
        }
    }
  }